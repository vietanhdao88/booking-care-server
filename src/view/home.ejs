<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <title>Home Page</title>
  </head>
  <body>
    <h1>Home page</h1>

    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>ID</th>
          <th>Fullname</th>
          <th>Email</th>
          <th>Password</th>
          <th>PhoneNumber</th>
          <th>Address</th>
          <th>Gender</th>
          <th>RoleId</th>
          <th>PositionId</th>
          <th>Avatar</th>
          <th colspan="3" style="text-align: center">Handle</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(item){%>
        <tr>
          <th scope="row"><%=item.id%></th>
          <td><%=item.fullName%></td>
          <td><%=item.email%></td>
          <td><%=item.password.slice(0, 10)%></td>
          <td><%=item.phoneNumber%></td>
          <td><%=item.address%></td>
          <td><%=item.gender === '0' ? "Male" : "Female"%></td>
          <td><%=item.roleId%></td>
          <td><%=item.positionId%></td>
          <td><%=item.avatar%></td>
          <td>
            <a href="/detail-user?id=<%=item.id%>" class="btn btn-primary"
              >Xem</a
            >
          </td>
          <td>
            <a href="/delete-user?id=<%=item.id%>" class="btn btn-danger"
              >Xóa</a
            >
          </td>
          <td>
            <a href="/update-user?id=<%=item.id%>" class="btn btn-warning"
              >Sửa</a
            >
          </td>
        </tr>
        <%});%>
      </tbody>
    </table>
  </body>
</html>
